{
  "name": "Ассистент",
  "description": "Помощь в оформлении грантовой заявки",
  "author": "MISty",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "128": "favicon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "favicon.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {},
  "content_scripts": [
    {
      "matches": [
        "https://grants.myrosmol.ru/*"
      ],
      "js": [
        "helper.js",
        "question.js",
        "auto-trigger.js"
      ],
      "persistent": false
    }
  ]
}